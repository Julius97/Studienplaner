<h1>Veranstaltungstyp</h1>
<h3>Neuen Veranstaltungstyp speichern</h3>
<p>
	<%= form_tag event_index_path, method: :post do %>
		<%= label_tag "name", "Typ" %>
		<%= text_field_tag "name" %><br /><br />
		<%= submit_tag "Speichern" %>
	<% end %>
</p>
<h3>Auflistung</h3>
<table cellspacing="10">
	<thead>
		<tr>
			<th>Typ</th>
			<th>Aktionen</th>
		</tr>
	</thead>
	<tbody>
		<% @events.each do |event| %>
			<tr>
				<td><%= event.name %></td>
				<td><%= link_to "Löschen", event_path(event.id), method: :delete, data: { confirm: "Wirklich löschen?" } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
